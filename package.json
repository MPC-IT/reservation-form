{
  "name": "reservation-form",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": ".",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron . --no-sandbox\"",
    "electron:build": "npm run build && electron-builder --win --publish=never",
    "electron:prod": "npm run build && npm run start:prod",
    "start:prod": "PORT=3001 next start",
    "electron:start": "electron .",
    "tailwind:build": "tailwindcss -i ./styles/globals.css -o ./styles/output.css --watch",
    "tailwind:init": "tailwindcss init -p"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-slot": "^1.0.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^3.0.1",
    "formidable": "^3.5.4",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "^16.0.8",
    "next-auth": "^4.23.2",
    "prisma": "^5.22.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.47.0",
    "swr": "^2.3.7",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "build": {
    "appId": "com.multipoint.reservationform",
    "productName": "Reservation Form",
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis",
      "icon": "public/reservations-form.ico"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "!out/**/*"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "out"
      }
    ],
    "directories": {
      "buildResources": "public"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Reservation Form",
      "installerIcon": "public/reservations-form.ico",
      "uninstallerIcon": "public/reservations-form.ico",
      "installerHeaderIcon": "public/reservations-form.ico",
      "artifactName": "Reservation-Form-Setup-${version}.exe",
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.6.0",
    "@types/formidable": "^3.4.6",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "20.8.4",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "electron": "^28.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "8.48.0",
    "eslint-config-next": "13.5.4",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "5.2.2",
    "wait-on": "^7.0.1"
  }
}
