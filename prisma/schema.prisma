generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique        // MPC email, e.g. leesa@multipointcom.com
  password String                  // hashed with bcrypt
  name     String
  role     String   @default("staff") // "staff" or "admin"
  active   Boolean  @default(true)

  createdProfiles Profile[] @relation("CreatedBy")
  updatedProfiles Profile[] @relation("UpdatedBy")
  auditLogs      AuditLog[]
}

model Profile {
  id            Int      @id @default(autoincrement())

  // Reservation Type
  profileType   String
  callType      String

  // Details
  companyName   String
  dealName      String?
  setupName     String?
  setupEmail    String?

  callDate      String?
  startTime     String?
  timeZone      String?

  // Passcodes / Conference ID
  hostPasscode  String?
  guestPasscode String?
  conferenceId  String?

  notes         String?

  // Status lifecycle: Draft → Pending Confirmation → Confirmed → Completed / TBD / Cancelled
  status        String   @default("Draft")

  // Audit fields
  createdById   Int?
  updatedById   Int?

  // Relationships
  companyId   Int?
  company     Company? @relation(fields: [companyId], references: [id])
  setupId     Int?
  setup       Setup?   @relation(fields: [setupId], references: [id])
  auditLogs   AuditLog[]
  
  createdBy     User?    @relation("CreatedBy", fields: [createdById], references: [id])
  updatedBy     User?    @relation("UpdatedBy", fields: [updatedById], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profiles  Profile[]
  setups    Setup[]
}

model Setup {
  id          Int      @id @default(autoincrement())
  name        String
  email       String?
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id])
  profiles    Profile[]
  teamCalls   TeamCall[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([companyId, name])
}

model TeamCall {
  id          Int      @id @default(autoincrement())
  name        String
  setupId     Int
  setup       Setup    @relation(fields: [setupId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([setupId, name])
}

// Audit logging for tracking reservation and email actions
model AuditLog {
  id           Int      @id @default(autoincrement())
  eventType    String   // reservation_created, reservation_updated, reservation_email_sent, etc.
  reservationId Int?    // Optional - some events may not be tied to a specific reservation
  userId       Int      // User who performed the action
  userEmail    String   // Email of the user who performed the action
  metadata     String?  // JSON string containing additional context (recipient emails, fields changed, error messages, etc.)
  createdAt    DateTime @default(now())

  // Relationships
  user         User     @relation(fields: [userId], references: [id])
  reservation   Profile? @relation(fields: [reservationId], references: [id])

  @@index([eventType])
  @@index([reservationId])
  @@index([userId])
  @@index([createdAt])
}
